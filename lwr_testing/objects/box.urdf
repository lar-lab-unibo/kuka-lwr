<robot name="simple_box"  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <property name="box_x" value="0.2" />
  <property name="box_y" value="0.0" />
  <property name="box_z" value="1.25" />
  <property name="box_w" value="0.1" />
  <property name="box_d" value="0.1" />
  <property name="box_h" value="0.3" />

  <xacro:macro name="cuboid_inertia" params="width height length mass">
    <inertia ixx="${mass * (height * height + length * length) / 12}"
             iyy="${mass * (width * width + length * length) / 12}"
             izz="${mass * (width * width + height * height) / 12}"
             ixy="0" iyz="0" ixz="0"/>
  </xacro:macro>

  <link name="my_box">
    <inertial>
      <origin xyz="${box_x} ${box_y} ${box_z}" />
      <mass value="0.1" />
      <cuboid_inertia width="${box_w}" height="${box_d}" length="${box_h}" mass="0.1"/>
    </inertial>

    <visual>
      <origin xyz="${box_x} ${box_y} ${box_z}"/>
      <geometry>
        <box size="${box_w} ${box_d} ${box_h}"/>
      </geometry>

    </visual>
    <collision>
      <origin xyz="${box_x} ${box_y} ${box_z}"/>
      <geometry>
        <box size="${box_w} ${box_d} ${box_h}"/>
      </geometry>
      <surface>
          <friction>
            <ode>
              <mu>300000.0</mu>
              <mu2>300000.0</mu2>
              <slip1>1000.0</slip1>
              <slip2>1000.0</slip2>
            </ode>
          </friction>
        </surface>
    </collision>
  </link>

  <gazebo reference="my_box">
    <material>Gazebo/Red</material>
    <turnGravityOff>false</turnGravityOff>
    <kp>100000000.0</kp>
    <kd>1000000.0</kd>
    <mu1>300000.0</mu1>
    <mu2>300000.0</mu2>
    <slip1>0.0</slip1>
    <slip2>0.0</slip2>
  </gazebo>
</robot>
